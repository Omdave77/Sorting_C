#include <stdio.h>

void swap(int *a, int i, int j) {
    int temp = a[i];
    a[i] = a[j];
    a[j] = temp;
}

int main() {
    int a[] = {7, 4, 10, 8, 3, 1};
    int n = sizeof(a) / sizeof(a[0]); 
    
    for (int i = 0; i < n - 1; i++) {
        int min = i; 
        
        for (int j = i + 1; j < n; j++) {
            if (a[j] < a[min]) {
                min = j;
            }
        }

        if (min != i) {
            swap(a, i, min); 
        }
    }
    
    for (int i = 0; i < n; i++) {
        printf("%d ", a[i]);
    }

    return 0;
}
 
